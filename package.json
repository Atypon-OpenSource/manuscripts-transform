{
  "name": "@manuscripts/transform",
  "description": "ProseMirror transformer for Manuscripts applications",
  "version": "4.2.0",
  "repository": "github:Atypon-OpenSource/manuscripts-transform",
  "license": "Apache-2.0",
  "main": "dist/cjs",
  "module": "dist/es",
  "types": "dist/types",
  "files": [
    "dist"
  ],
  "keywords": [
    "prosemirror"
  ],
  "scripts": {
    "build": "npm-run-all --parallel build:*",
    "build:cjs": "tsc --outDir dist/cjs --module commonjs",
    "build:es": "tsc --outDir dist/es --declarationDir dist/types --declaration",
    "dev": "pnpm version-file && npm-run-all --parallel \"build:* --watch\"",
    "version-file": "node -p \"'export const VERSION = ' + JSON.stringify(require('./package.json').version) + ';'\" > src/version.ts",
    "lint": "eslint src --ext .js,.ts",
    "lint:fix": "eslint src --fix --ext .js,.ts",
    "prebuild": "rimraf dist && pnpm version-file",
    "prettier": "prettier --write \"src/**/*.{ts,tsx}\" \"*.{js,json}\"",
    "preversion": "npm-run-all --parallel typecheck lint build test",
    "test": "TZ=UTC jest --runInBand",
    "typecheck": "tsc --noEmit",
    "version": "pnpm build"
  },
  "dependencies": {
    "@manuscripts/json-schema": "2.2.12",
    "citeproc": "2.4.63",
    "jszip": "3.10.1",
    "lodash": "4.17.21",
    "prosemirror-model": "1.25.0",
    "prosemirror-tables": "1.7.1",
    "prosemirror-utils": "1.2.2",
    "semver": "7.7.2",
    "uuid": "9.0.1",
    "w3c-xmlserializer": "4.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.23.7",
    "@babel/preset-env": "7.23.8",
    "@babel/preset-typescript": "7.23.3",
    "@eslint/eslintrc": "3.3.1",
    "@eslint/js": "9.29.0",
    "@jats4r/dtds": "0.0.10",
    "@manuscripts/eslint-config": "0.5.1",
    "@types/jest": "29.5.14",
    "@types/lodash": "4.17.16",
    "@types/mime": "3.0.4",
    "@types/node": "20.17.46",
    "@types/semver": "7.7.0",
    "@types/uuid": "9.0.8",
    "@types/w3c-xmlserializer": "2.0.4",
    "@typescript-eslint/eslint-plugin": "8.34.1",
    "@typescript-eslint/parser": "8.34.1",
    "eslint": "9.29.0",
    "eslint-plugin-header": "3.1.1",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-jest": "29.0.1",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-mdx": "3.5.0",
    "eslint-plugin-prettier": "5.5.0",
    "eslint-plugin-promise": "7.2.1",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "husky": "8.0.3",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "libxmljs2": "0.35.0",
    "migration-base": "npm:@manuscripts/transform@2.3.20",
    "npm-run-all": "4.1.5",
    "prettier": "3.6.0",
    "prosemirror-state": "1.4.3",
    "prosemirror-view": "1.39.2",
    "rimraf": "6.0.1",
    "typescript": "4.9.5"
  },
  "engines": {
    "node": ">=20.16.0"
  }
}